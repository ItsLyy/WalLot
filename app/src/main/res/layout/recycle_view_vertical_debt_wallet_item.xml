<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingVertical="5dp"
    android:paddingHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginVertical="10dp"
    android:gravity="center_vertical"
    android:background="@drawable/debt_container">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/debt_icon"
        android:padding="10dp"
        android:elevation="1dp"
        android:background="@drawable/debt_bg_icon"
        android:src="@drawable/category_cash_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{ Name }"
                android:id="@+id/debt_name_person"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{ Nominal }"
                android:id="@+id/debt_nominal"
                android:textAlignment="textEnd"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="{ Number Phone }"
            android:id="@+id/debt_number_phone"
            android:layout_weight="1.3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="{ Description }"
            android:layout_marginTop="1dp"
            android:id="@+id/debt_description"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>