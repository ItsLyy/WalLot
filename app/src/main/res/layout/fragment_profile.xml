<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".fragment.main_activity.ProfileFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient_blue"
        android:paddingTop="100px"
        android:paddingHorizontal="7dp"
        android:paddingBottom="140dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpha V1.0"
                android:textColor="@color/white"
                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profilePict"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/image_border"
                android:scaleType="centerCrop"
                android:tint="@color/white"
                android:src="@drawable/bn_profile_icon"
                tools:ignore="UseAppTint" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tx_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="@color/white"
                android:textSize="35dp"/>

            <TextView
                android:layout_margin="2dp"
                android:id="@+id/tx_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="exampleemail@gmail.com"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tx_phonenumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+628123456789"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tx_idUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-ywaiduhwiadsadhuia"
                android:textColor="@color/white"/>


        </LinearLayout>

        <LinearLayout
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bn_container"
            android:padding="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/edit_icons" />

                <Button
                    android:id="@+id/btn_changeusername"
                    android:textColor="#5D5D5D"
                    android:textSize="20dp"
                    android:paddingLeft="2dp"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_btn_transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit profile name"/>


            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/password_icon" />

                <Button
                    android:id="@+id/btn_changePassword"
                    android:textColor="#5D5D5D"
                    android:textSize="20dp"
                    android:paddingLeft="2dp"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_btn_transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/email_icon" />

                <Button
                    android:id="@+id/btn_changeEmail"
                    android:textColor="#5D5D5D"
                    android:textSize="20dp"
                    android:paddingLeft="2dp"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_btn_transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change E-mail address"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/phone_icon" />

                <Button
                    android:id="@+id/btn_changePhonenumb"
                    android:textColor="#5D5D5D"
                    android:textSize="20dp"
                    android:paddingLeft="2dp"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_btn_transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change phone number"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logout_icon" />

                <Button
                    android:id="@+id/logout_btn"
                    android:textColor="#FF0000"
                    android:textSize="20dp"
                    android:paddingLeft="2dp"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textAlignment="viewStart"
                    android:layout_gravity="start"
                    android:background="@drawable/bg_btn_transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log-out" />


            </LinearLayout>




        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</FrameLayout>