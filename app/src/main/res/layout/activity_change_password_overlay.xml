<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".overlay.AddFriendOverlay"
    android:padding="20dp"
    android:elevation="2dp"
    android:background="@color/black_transparent"
    android:addStatesFromChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/add_friend_overlay_container"
        app:layout_constraintBottom_toBottomOf="parent">

    <EditText
        android:id="@+id/oldInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp"
        android:hint="Old Password"
        android:background="@drawable/transaction_input_field"
        android:layout_marginBottom="5dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/changeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp"
        android:hint="New Password"
        android:background="@drawable/transaction_input_field"
        android:layout_marginBottom="5dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/confirmInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp"
        android:hint="Confirm Password"
        android:background="@drawable/transaction_input_field"
        android:gravity="center"/>

    <TextView
        android:id="@+id/change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:textColor="@color/cyan"
        android:layout_gravity="center"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>