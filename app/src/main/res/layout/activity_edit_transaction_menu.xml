<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTransactionMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_blue"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:background="@drawable/transaction_form_container"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:paddingHorizontal="25dp"
                android:background="@drawable/transaction_input_container">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp"
                    android:textSize="30sp"/>

                <EditText
                    android:id="@+id/transaction_nominal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="50sp"
                    android:inputType="number"
                    android:hint="000.000.000"
                    android:maxLength="11"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_white"
                android:layout_marginTop="5dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transaction_input_field"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/transaction_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/transaction_input_field"
                        android:drawableStart="@drawable/transaction_description_icon"
                        android:drawablePadding="7dp"
                        android:hint="Description"
                        android:maxLength="20"
                        android:minHeight="70dp"
                        android:layout_weight="1"
                        android:paddingHorizontal="10dp"
                        android:textSize="18sp"/>
                    />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="0/50"
                        android:id="@+id/transaction_description_length"/>

                </LinearLayout>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/transaction_input_field"
                    android:minHeight="70dp"
                    android:textSize="18sp"
                    android:spinnerMode="dropdown"
                    android:id="@+id/spinner_category"
                    android:layout_marginVertical="5dp"/>

                <Button
                    android:id="@+id/datePickerTransaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="70dp"
                    android:textSize="18sp"
                    android:layout_marginVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:drawableStart="@drawable/transaction_date_icon"
                    android:drawablePadding="7dp"
                    android:background="@drawable/transaction_input_field"
                    android:text="00/00/0000"
                    android:textAlignment="textStart"
                    android:textStyle="normal"
                    android:textColor="@color/dark_grey"
                    android:stateListAnimator="@null"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="10dp"
                android:background="@color/light_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingHorizontal="20dp"
                    android:layout_marginVertical="10dp">

                    <ImageView
                        android:id="@+id/delete_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:layout_marginRight="3dp"
                        android:padding="10dp"
                        android:text="Delete"
                        android:tint="@color/light_white"
                        android:src="@drawable/delete_trasaction_icon"
                        android:background="@drawable/transaction_add_btn"
                        tools:ignore="UseAppTint" />

                    <Button
                        android:id="@+id/update_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/transaction_add_btn"
                        android:text="Update"
                        android:textColor="@color/light_white"
                        android:textSize="14sp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>