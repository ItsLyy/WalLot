<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/list_transaction_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:background="@color/light_white">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="12dp"
            android:background="@drawable/category_bg_icon"
            android:src="@drawable/category_cash_icon"
            android:layout_gravity="center"
            android:id="@+id/icon_transaction_item"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="{ Category }"
                    android:id="@+id/category_transaction_item"
                    android:textSize="18sp"
                    android:gravity="bottom"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/money_transaction_item"
                    android:text="{ Money}"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:gravity="bottom"
                    tools:ignore="RtlCompat" />

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/date_transaction_item"
                android:text="{ Date }"
                android:textSize="18sp"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>