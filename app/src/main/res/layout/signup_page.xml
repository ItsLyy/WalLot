<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20px">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="90dp"
        android:textAlignment="center"
        android:text="LOGO"
        android:textSize="200px" />

    <EditText
        android:id="@+id/email"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/bg_edittext"
        android:hint="E-mail"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/phonenumb"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/bg_edittext"
        android:hint="Your phone number"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/username"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phonenumb"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/bg_edittext"
        android:hint="Create Username"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/bg_edittext"
        android:hint="Create Password"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/passwordCfr"
        android:inputType="textPassword"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/bg_edittext"
        android:hint="Confirm Password"
        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="16sp" />


<!--    <CheckBox-->
<!--        android:id="@+id/checkBox"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@+id/passwordCfr"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:layout_marginTop="24dp"-->
<!--        android:layout_marginEnd="192dp"-->
<!--        android:text="Remember me" />-->

    <Button
        android:id="@+id/btn_create"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordCfr"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/bg_icon_gradient_blue"
        android:text="Create an Account"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/btn_create"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="9dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:text="Log-in"
        android:textAllCaps="false"
        android:textColor="#FF6200EE" />
</RelativeLayout>