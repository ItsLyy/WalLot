<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    tools:context=".activity.WalletDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_white">

        <RelativeLayout
            android:id="@+id/background_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_blue"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:backgroundTint="@color/black"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_above="@+id/linearLayout2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="145dp"
                android:layout_marginEnd="145dp"
                android:layout_marginBottom="-370dp"
                android:elevation="10dp"
                android:background="@drawable/wallet_profile_stroke"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                    <ImageView
                        android:id="@+id/wallet_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bn_group_icon"
                        android:background="@drawable/bg_icon_gradient_blue"
                        android:padding="15dp"
                        android:tint="@color/white"
                        tools:ignore="UseAppTint" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:background="@drawable/bg_home_menu"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingTop="60dp"
                android:paddingBottom="20dp"
                android:elevation="5dp"
                android:foregroundGravity="center">

                <TextView
                    android:id="@+id/wallet_name"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Wallet Name"/>

                <TextView
                    android:id="@+id/wallet_nominal"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:textSize="50sp"
                    android:text="Total Saldo"/>

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/wallet_tab_stroke_btn"
                    android:orientation="horizontal"
                    android:padding="1dp"
                    android:weightSum="3"
                    android:layout_marginTop="40dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/wallet_tab_background_left1_btn"
                        android:id="@+id/member_btn">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:tint="@color/white"
                            android:src="@drawable/bn_group_icon"
                            android:id="@+id/member_icon"
                            android:padding="3dp"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:id="@+id/transaction_btn"
                        android:layout_marginHorizontal="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/transaction_icon"
                            android:tint="@color/cyan"
                            android:id="@+id/transaction_icon"
                            android:padding="3dp"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/wallet_tab_background_right_btn"
                        android:id="@+id/debt_btn">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/debt_icon"
                            android:tint="@color/cyan"
                            android:id="@+id/debt_icon"
                            android:padding="3dp"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>

                </LinearLayout>

                <androidx.fragment.app.FragmentContainerView
                    android:layout_width="match_parent"
                    android:layout_height="480dp"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="120dp"
                    android:id="@+id/fragment_wallet_detail_container"/>

            </LinearLayout>
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>